<div class="new-post">
<h2><%= link_to 'New post', new_post_path %></h2>
</div>

<div class="posts-wrapper">
  <% @posts.each do |post| %>
    <div class="post">
      <div class="post-head">
        <div class="poster">kabligh</div>
      </div>
      <div class="image">
      <%= link_to (image_tag post.image), post_path(post) %>
      </div>
      <div class="caption"><%= post.caption %></div>
    </div>
  <% end %>
</div>
